<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="page.main.title" remove="true" />
            <referenceBlock name="checkout.registration" remove="true" />
            <referenceBlock name="checkout.success" remove="true" />
            <block class="Magento\Checkout\Block\Onepage\Success" name="title_checkout_success" template="Nikolay_Promotion::title_checkout_success.phtml" before="-" cacheable="true"/>
            <block class="Magento\Framework\View\Element\Template" name="nikolay_checkout_success_block" template="Nikolay_Promotion::checkout_success_blocks.phtml" after="-" cacheable="true"/>
        </referenceContainer>
    </body>
</page>